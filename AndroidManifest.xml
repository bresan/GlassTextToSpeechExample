<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bresan.glass.examples.TextToSpeechExample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.bresan.glass.examples.TextToSpeechExample.AccelerometerActivity"
            android:label="@string/app_name"
            android:theme="@style/MenuTheme" >
            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
                <action android:name="com.bresan.glass.examples.AccelerometerExample.ACCELEROMETER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/camera" />
        </activity>
    </application>

    <!-- For XE16 and above -->
    <uses-permission android:name="com.google.android.glass.permission.DEVELOPMENT" />

</manifest>